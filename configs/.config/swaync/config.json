{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "ignore-gtk-theme": true,
  "control-center-layer": "top",
  "cssPriority": "user",
  "control-center-width": 380,
  "control-center-height": -1,
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-window-width": 380,
  "notification-body-image-height": 200,
  "notification-body-image-width": 200,
  "notification-grouping": false,
  "timeout": 6,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 150,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "sound-script": {
      "exec": "bash ~/.config/swaync/scripts/notify_sound.sh > /tmp/swaync-notify-sound.log",
      "app-name": ".*google-chrome.*"
    }
  },
  "widgets": [
    "buttons-grid",
    "volume",
    "backlight",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "notifications": {
      "vexpand": false
    },
    "volume": {
      "label": "",
      "show-per-app": true
    },
    "backlight": {
      "min": 1,
      "label": "󰃞"
    },
    "mpris":{
      "autohide": true
    },
    "buttons-grid": {
      "buttons-per-row": 4,
      "actions": [
        {
          "label": "󰂛",
          "command": "swaync-client -d",
          "type": "toggle",
          "tooltip": "DND",
          "update-command": "echo $(swaync-client --get-dnd)"
        },
        {
          "label": "",
          "command": "hyprlock",
          "tooltip": "Lock"
        },
        {
          "label": "󰜉",
          "command": "reboot",
          "tooltip": "Reboot"
        },
        {
          "label": "⏻",
          "command": "shutdown now",
          "tooltip": "Power Off"
        }
      ]
    }
  }
}
